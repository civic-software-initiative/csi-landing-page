<script is:inline>
  function submitContactForm(messageParams) {
    fetch("https://nr9159tsv6.execute-api.us-east-1.amazonaws.com/contact-us", {
      method: "POST",
      body: JSON.stringify(messageParams),
      headers: {
        "Content-Type": "application/json",
      },
    });
  }
</script>

<div class="flex flex-col">
  <div
    class="bg-primary px-12 py-8"
  >
    <h2 class="pb-2 text-3xl font-bold text-base-100">Contact us</h2>
    <p class="text-base-100 text-lg">
      Let us know how we can partner with you, whether you're a client, a new
      recruit, or a collaborating partner organization. We're excited to hear
      from you!
    </p>
  </div>
  <div
    class="bg-base-100 px-12 py-4"
  >
    <form class="flex flex-col gap-4">
      <div class="form-group">
        <input
          type="text"
          class="text-lg w-full form-control rounded border border-solid border-gray-300 bg-white transition ease-in-out focus:border-secondary focus:bg-accent focus:text-gray-700 focus:outline-none"
          id="nameInput"
          placeholder="Name"
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          class="text-lg w-full form-control rounded border border-solid border-gray-300 bg-white  transition ease-in-out focus:border-secondary focus:bg-accent focus:text-gray-700 focus:outline-none"
          id="emailInput"
          placeholder="Email address"
        />
      </div>
      <div class="form-group">
        <textarea
          class="text-lg w-full form-control rounded border border-solid border-gray-300 bg-white  transition ease-in-out focus:border-secondary focus:bg-accent focus:text-gray-700 focus:outline-none"
          id="bodyInput"
          rows="3"
          placeholder="Message"></textarea>
      </div>

      <button
        type="button"
        class="text-lg btn-primary btn w-full normal-case text-base-100 hover:text-accent"
        onclick="submitContactForm({'name':document.getElementById('nameInput').value, 'email':document.getElementById('emailInput').value,'message':document.getElementById('bodyInput').value})"
        >Send</button
      >
    </form>
  </div>
</div>
