---
import { Image } from "@astrojs/image/components";

const hero_image = {
  src: import("../../assets/images/hero-infrastructure.png"),
  alt: "Stock Photo 1",
};
---

<div class="hero bg-base-100">
  <div class="hero-content flex flex-col md:flex-row">
    <Image class="rounded-lg md:w-1/2" {...hero_image} />
    <div class="flex flex-col items-start gap-4 px-6 pt-2">
      <h1 class="text-4xl text-secondary">Our purpose</h1>
      <p class="text-2xl">
        We are a 501(c)(3) nonprofit providing custom software to other
        nonprofits without the big tech price tag
      </p>
      <a
        class="btn-primary btn px-3 text-xl normal-case text-base-100 hover:text-accent"
        href="/#contact">Book a consultation</a
      >
    </div>
  </div>
</div>
