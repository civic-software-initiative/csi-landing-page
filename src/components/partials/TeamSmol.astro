---
import { Image } from "@astrojs/image/components";

import adam from "../../assets/images/headshot-adam.png";
import sam from "../../assets/images/headshot-sam.png";
import nikhil from "../../assets/images/headshot-nikhil.png";
---

<div class="flex max-w-7xl items-center justify-center">
  <section class="mb-8 pt-8 text-center text-gray-800">
    <h1 class="mb-6 text-3xl font-bold">
      Meet the <a class="text-secondary" href="/who-we-are">team</a>
    </h1>

    <div class="flex flex-col md:flex-row">
      <div class="my-6">
        <Image
          src={adam}
          alt="adam-headshot"
          class="mx-auto mb-4 w-2/3 rounded-full shadow-lg"
        />

        <p class="text-xl font-bold">Adam Pickersgill</p>
        <p class="px-16 text-lg text-gray-500 md:text-base">
          Executive Director,<br />Principal Product Manager
        </p>
      </div>

      <div class="my-6">
        <Image
          src={sam}
          alt="sam-headshot"
          class="mx-auto mb-4 w-2/3 rounded-full shadow-lg"
        />

        <p class="text-xl font-bold">Sam Alleva</p>
        <p class="px-16 text-lg text-gray-500 md:text-base">
          Secretary, Treasurer,<br />Chief of Operations
        </p>
      </div>

      <div class="my-6">
        <Image
          src={nikhil}
          alt="nikhil-headshot"
          class="mx-auto mb-4 w-2/3 rounded-full shadow-lg"
        />

        <p class="text-xl font-bold">Nikhil Vengal</p>
        <p class="px-16 text-lg text-gray-500 md:text-base">
          Principal Software Engineer
        </p>
      </div>
    </div>
  </section>
</div>
