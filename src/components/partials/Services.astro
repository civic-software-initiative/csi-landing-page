---
import Content from "../base/Content.astro";

export interface Props {
  bgColor?: boolean;
}
const { bgColor = false } = Astro.props;
---

<Content
  isReversed
  highlight="Services"
  title="What can we help with?"
  items={[
    {
      title: "Software Solutions",
      description:
        "We provide top-quality tech solutions for nonprofits, community organizations, and civic institutions pro bono or low bono.",
    },
    {
      title: "Technical Advising",
      description:
        "As a technology catalyst we offer software engineering best practices that balance speed of delivery and ongoing maintenance costs, guiding our clients through their digital transformation.",
    },
    {
      title: "Project Planning",
      description:
        "As a force multiplier we enhance the capacity of our clients without reinventing the wheel; we bring industry-standard software tools and design patterns to the unique challenges faced by our target organizations.",
    },
  ]}
  image={{
    src: import("../../assets/images/stock-photo-2.jpeg"),
    alt: "Stock Photo 2",
  }}
  bgColor={bgColor}
/>
