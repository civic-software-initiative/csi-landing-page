---
import { Picture } from "@astrojs/image/components";

import hands_circle from "../../assets/images/hands-circle.png";
---

<div class="w-full bg-primary">
  <div class="flex flex-row">
    <Picture
      widths={[400, 800]}
      aspectRatio={"1:1"}
      sizes="(max-width: 800px) 66vw, 800px"
      src={hands_circle}
      alt="hands_circle"
    />
    <div class="flex flex-col justify-center px-12">
      <h1 class="pb-4 text-4xl text-base-100">Our Mission</h1>
      <p class="pb-8 text-2xl text-base-100">
        To apply technological expertise towards building a more globally
        equitable society.
      </p>
      <p class="pb-8 text-lg text-base-100">
        Every non-profit and civic organization should have access to the
        software tools they need to fulfill their mission without breaking the
        bank.
      </p>
      <a
        class="btn-outline btn-accent btn w-1/2 text-lg normal-case"
        href="/how-we-work">Learn more â†’</a
      >
    </div>
  </div>
</div>
