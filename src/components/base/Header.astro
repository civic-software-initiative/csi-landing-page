---
import { Icon } from "astro-icon";
import { Image } from "@astrojs/image/components";

const logo = {
  src: import("../../assets/images/csi-logo-hero.png"),
  alt: "Civic Software Initiative",
};
---

<header
  class:list={[
    { sticky: true, relative: false },
    "bg-base-100 top-0 z-40 flex-none mx-auto w-full transition-all ease-in duration-100",
  ]}
  id="header"
>
  <div class="mx-auto w-full max-w-7xl md:flex md:justify-between">
    <div class:list={[{ "mr-auto": false }, "flex justify-between md:w-2/3 md:py-3 md:px-2"]}>
      <div class="flex items-center md:w-1/3" >
        <Image class="" {...logo} />
        
      </div>
      <div class="flex items-center md:hidden">
        <button
          type="button"
          class="mx-1.5 inline-flex items-center rounded-lg p-2.5 text-sm text-primary transition hover:text-red"
          aria-label="Toggle Menu"
          data-aw-toggle-menu
        >
          <Icon name="tabler:menu" class="h-10 w-10" optimize={false} />
        </button>
      </div>
    </div>
    <nav
      class="hidden h-[calc(100vh-72px)] w-full items-center overflow-y-auto md:mx-5 md:flex md:h-auto md:w-auto md:flex-grow md:justify-end md:overflow-visible"
      aria-label="Main navigation"
    >
      <ul
        class="flex w-full flex-col pt-8 text-xl items-center md:w-auto md:flex-row md:items-center md:gap-6 md:pt-0 md:text-base"
      >
        <li class="">
          <a
            class="flex items-center px-10 py-3 font-medium text-black transition duration-150 ease-in-out hover:text-red md:p-0"
            href="/who-we-are"
          >
            Our Team
          </a>
        </li>
        <li class="">
          <a
            class="btn-primary btn px-10 text-lg font-medium normal-case text-base-100 transition duration-150 ease-in-out hover:text-accent md:px-5 md:text-base"
            href="/contact"
          >
            Partner with us
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
