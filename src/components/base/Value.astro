---
import { Image } from "@astrojs/image/components";
export interface Props {
  title: string;
  content?: string;
  image: string | any;
}
const {
  title,
  content = await Astro.slots.render("content"),
  image,
} = Astro.props;
---

<div class="items-left flex flex-col md:flex-row gap-4 md:gap-2 pb-8 md:pb-4">
  <Image {...image} class="w-2/3 md:w-1/3 h-full" />
  <div class="">
    <h1 class="text-xl md:text-lg font-medium text-primary">{title}</h1>
    <div class="mt-2 mb-4 h-0.5 w-full bg-secondary"></div>
    <p class="text-lg md:text-base text-neutral">
      {content}
    </p>
  </div>
</div>
