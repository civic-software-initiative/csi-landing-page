---
import { Image } from "@astrojs/image/components";
export interface Props {
  title: string;
  content?: string;
  image: string | any;
}
const {
  title,
  content = await Astro.slots.render("content"),
  image,
} = Astro.props;
---

<div class="items-left flex flex-col gap-4 pb-8 md:flex-row md:gap-2 md:pb-4">
  <Image {...image} class="h-full w-2/3 md:w-1/3" />
  <div class="">
    <h1 class="text-xl font-medium text-primary md:text-lg">{title}</h1>
    <div class="mt-2 mb-4 h-0.5 w-full bg-secondary"></div>
    <p class="text-lg text-neutral md:text-base">
      {content}
    </p>
  </div>
</div>
